{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["src/**/__tests__/*", "src/**/*.stories.*"],
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["ES2024", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
